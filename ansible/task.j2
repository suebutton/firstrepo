{
    "family": "{{ aws_task_name }}",
    "containerDefinitions": [
        {
            "name": "{{ service_name }}",
            "image": "{{ docker_registry_host }}/{{ service_name }}:{{ version }}",
            "cpu": 0,
            "memory": 170,
            "portMappings": [
                {
                    "containerPort": {{ container_port }},
                    "hostPort": {{ elb_port }},
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "mountPoints": [],
            "environment": [
                {
                    "name": "PORT",
                    "value": "{{ container_port }}"
                }, {
                    "name": "NODE_ENV",
                    "value": "{{ service_env }}"
                }, {
                    "name": "BIGQUERY_PRIVATE_KEY",
                    "value": "{{ bigquery_private_key }}"
                }, {
                    "name": "BIGQUERY_CLIENT_EMAIL",
                    "value": "{{ bigquery_client_email }}"
                }, {
                    "name": "SENTRY_DSN",
                    "value": "{{ sentry_dsn }}"
                }, {
                    "name": "REDIS_HOST",
                    "value": "{{ redis_hostname }}"
                }, {
                    "name": "REDIS_PORT",
                    "value": "{{ redis_port }}"
                }, {
                    "name": "COMSTORE_URL",
                    "value": "{{ comstore_url }}"
                }
            ]
        }
    ],
    "volumes": []
}
