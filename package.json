{
  "name": "kokiri",
  "version": "1.0.0",
  "description": "Where links come from.",
  "main": "index.js",
  "engines": {
    "node": ">=7"
  },
  "scripts": {
    "start": "node index.js",
    "precommit": "lint-staged",
    "lint": "eslint --ext .js .",
    "unit": "mocha --recursive tests/",
    "test": "npm run unit && npm run lint",
    "format": "prettier --single-quote --trailing-comma es5 --write \"**/*.js\"",
    "coverage": "nyc npm run unit && nyc report --reporter=lcov && open coverage/lcov-report/index.html"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/button/kokiri.git"
  },
  "author": "will@usebutton.com",
  "license": "UNLICENSED",
  "dependencies": {
    "comstore-client": "https://button-archive.s3.amazonaws.com/npm/comstore-client-1.25.0.tgz",
    "koa-bodyparser": "^4.2.0",
    "koa-static": "^4.0.1",
    "libbtn": "https://button-archive.s3.amazonaws.com/npm/libbtn-2.3.0.tgz",
    "lodash": "^4.17.4",
    "redis": "^2.7.1",
    "request": "^2.81.0"
  },
  "devDependencies": {
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-config-button-platform": "1.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-mocha": "^4.9.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.1",
    "mocha": "^2.5.3",
    "mocha-eslint": "^3.0.1",
    "nock": "^8.0.0",
    "nyc": "^11.0.3",
    "prettier": "^1.5.2",
    "sinon": "^2.3.8",
    "supertest": "^3.0.0",
    "supertest-koa-agent": "^0.3.0"
  },
  "directories": {
    "test": "tests/"
  },
  "lint-staged": {
    "*.js": [
      "format",
      "git add"
    ]
  },
  "nyc": {
    "exclude": [
      "tests"
    ]
  }
}
